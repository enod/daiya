<h1>Хүлээн авагчдын жагсаалт</h1>

<table class="table">
  <thead>
    <tr>
      <th>Хэн </th>
      <th>Юуг </th>
      <th>Хаанаас </th>
      <th>Хаашаа </th>
      <th>Хэднээс</th>
      <th>Хэднийд</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    
    <% @receivers.each do |receiver| %>
      <tr>
        <% if current_user %>
        <td><%= gravatar_tag receiver.user.email, size: 30 %> <%= receiver.user.name %> </td>
        <% else %>
        <td><%= receiver.user.name %> </td>
        <% end %>
        <td><%= receiver.stuff %></td>
        <td><%= receiver.source_address %></td>
        <td><%= receiver.destination_address %></td>
        <td><%= receiver.from %></td>
        <td><%= receiver.to %></td>
        
        <td><ul class="list-group">
          
            
            <%= link_to 'Дэлгэрэнгүй  ', receiver_path(receiver.id),:method => :get %><span class="badge"><%= receiver.requests.count %></span>
          </li>
        
        </ul></td>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
<i class="fa fa-plus fa-lg"><%= link_to 'нэмэх', new_receiver_path %></i>
<% end %>

