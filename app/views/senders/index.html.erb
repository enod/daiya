<h1>Хүргэгчдийн жагсаалт</h1>

<table class="table">
  <thead>
    <tr>
      <th>Нэр</th>
      <th>Хаанаас</th>
      <th>Хаашаа</th>
      <th>Ирэх өдөр</th>
      <th>Хүсэж буй хөлс</th>
      <th></th>
      
    </tr>
  </thead>

  <tbody>
    <% @senders.each do |sender| %>
      <tr>
        
        <% if current_user %>
        <td> <%= gravatar_tag current_user.email, size: 30 %> <%= sender.user.name %></td>
        <% else %>
        <td><%= sender.user.name %></td>
        <% end %>
        
        <td><%= sender.source_address %></td>
        <td><%= sender.destination_address %></td>
        <td><%= sender.arrival %></td>
        <td><%= sender.fee %></td>
        <td>
          <%= link_to 'Дэлгэрэнгүй', sender_path(sender.id), :method => :get %> <span class="badge"><%= sender.negotiations.count %></span></td>
          
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
<i class="fa fa-plus fa-lg"><%= link_to 'нэмэх', new_sender_path %></i>
<% end %>