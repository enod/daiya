<%= simple_form_for(@reciever) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :stuff %>
    <%= f.input :description %>
    <%= f.input :source_address %>
    <%= f.input :destination_address %>
    <%= f.input :from %>
    <%= f.input :to %>
    <%= f.input :phone %>
    <%= f.input :mail %>
    <%= f.input :fee %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
