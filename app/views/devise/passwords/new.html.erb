<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
  <h2 class= "text-center">Нууц үгээ мартсан</h2>
  <%= f.error_notification %>

  
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Майл", input_html: {class: "form-control"} %>
  

  
    <%= f.button :submit, "Нууц үг солих заавар надруу явуул", class: "btn btn-primary btn-block" %>
  
<% end %>

<%= render "devise/shared/links" %>
