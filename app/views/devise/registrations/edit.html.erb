

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-signin" }) do |f| %>
<h2 class="text-center">Хэрэглэгчийн мэдээлэл</h2>
  <%= f.error_notification %>

  
    
    <%= f.input :email, required: true, label:false, placeholder: "Майл", input_html: {class: "form-control"} %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", required: false, label: false, placeholder: "Нууц үг", input_html: {class: "form-control"} %>
    <%= f.input :password_confirmation, required: false, label: false, placeholder: "Нууц үг давтах", input_html: {class: "form-control"} %>
    <%= f.input :current_password, required: true, label: false, placeholder: "Өмнөх нууц үг", input_html: {class: "form-control"}%>
  

  
    <%= f.button :submit, "Өөрчлөх", class: "btn btn-primary btn-block" %>
  
  <br>
  <%= gravatar_tag current_user.email, size: 100 %>
  <%= link_to "Аватараа өөрчлөх", "https://en.gravatar.com/" %>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
