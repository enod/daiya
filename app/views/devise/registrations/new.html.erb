

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h2 class="text-center">Бүртгүүлэх</h2>
  <%= f.error_notification %>

  
    <%= f.input :name, required: true, autofocus: true, label: false, placeholder: "Нэр- Солих боломжгүйг анхаарна уу?", input_html: {class: "form-control"} %>
    <%= f.input :email, required: true, label: false, placeholder: "Майл", input_html: {class: "form-control"}  %>
    <%= f.input :password, required: true, label: false, placeholder: "Нууц үг", input_html: {class: "form-control"} %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "Нууц үг давтах", input_html: {class: "form-control"} %>
  

  
    <%= f.button :submit, "Бүртгүүлэх", class: "btn btn-primary btn-block" %>
  
<% end %>

<%= render "devise/shared/links" %>
